{{> nav}}
    <!-- end top nav -->
    <!-- Start of filter/form -->
    <div class="bg-light">
      <div class="container">
        <form action="/houses" method="get" id="filters">
					<!-- !!! make header size shrink/overflow hide to fit in card -->
	        <div class="row justify-content-center">
	          <div class="col-2">
							<!-- location -->
	            <div class="input-group">
	              <span class="input-group-text">
	                <i class="fa-solid fa-location-dot"></i
	              ></span>
	              <select
	                class="form-select form-select-sm"
									name="location"
	                id="inputGroupSelect03"
	                aria-label="Example select with button addon"
	              >
	                <option selected value="any">Any Location</option>
	                <option>Koh Samui</option>
	                <option>Koh Phangan</option>
	                <option>Koh Tao</option>
	              </select>
	            </div>
	          </div>
	          <div class="col-2">
							<!-- rooms -->
	            <div class="input-group">
	              <span class="input-group-text"
	                ><i class="fa-solid fa-house"></i
	              ></span>
	              <select
	                class="form-select form-select-sm"
									name="rooms"
	                id="inputGroupSelect03"
	                aria-label="Example select with button addon"
	              >
	                <option selected value="any">Any Rooms</option>
	                <option value="1">1 room</option>
                  <option value="2">2 rooms</option>
                  <option value="3">3 rooms</option>
                  <option value="4">4 rooms</option>
                  <option value="5">5 rooms</option>
	              </select>
	            </div>
	          </div>
	          <div class="col-2">
							<!-- price -->
	            <div class="input-group input-group-sm mb-3">
	              <span class="input-group-text fw-bold">$</span>
	              <input
	                type="number"
									name="maxPrice"
	                class="form-control"
	                placeholder="max price"
	              />
	            </div>
	          </div>
	          <div class="col-2">
							<!-- sort -->
	            <div class="input-group input-group-sm mb-3">
	              <span class="input-group-text"
	                ><i class="fa-solid fa-sort"></i
	              ></span>
	              <select
	                class="form-select"
									name="sort"
	              >
	                <option value="price" >Price (low to high)</option>
	                <option value="-price">Price (high to low)</option>
	              </select>
	            </div>
	          </div>
	          <div class="col-2">
							<!-- title -->
	            <div class="input-group input-group-sm mb-3">
	              <input
	                type="text"
	                class="form-control"
									name="title"
	                id="exampleInputEmail1"
	                aria-describedby="emailHelp"
	                placeholder="House Name..."
	              />
	            </div>
	          </div>
	          <div class="col col-md-auto">
							<input
								type="hidden"
								name="filtering"
								value="true"
							/>
	            <button class="btn btn-success btn-sm">Search</button>
	          </div>
					</div>
				</form>
      </div>
    </div>
    <!-- end of filter/form -->
    <!-- start houses -->
    <div class="container py-4">
      <div class="row row-cols-4 pb-3">
				<!-- houses hbs loop -->
				{{#each houses as |house|}}
        <div class="col">
          <div class="card h-100">
            <a href="/houses/{{house._id}}" class="stretched-link"></a>
	          <img
	            src="{{house.photos.[0]}}"
	            class="card-img-top houses-img img-fluid"
	            alt="..."
	          />
            <div class="card-body">
							<!-- location/rooms grid -->
              <small
                ><i class="fa-solid fa-location-dot house-pg"></i>
	                  {{house.location}} â€¢ {{house.rooms}} Rooms
              </small>
              <h5 class="card-title text-start">{{house.title}}</h5>
              <div class="row">
                <div class="col text-start"><small>0 reviews</small></div>
                <div class="col text-end"><small>${{house.price}}/night</small></div>
                <a href="/houses/{{house._id}}" class="stretched-link"></a>
              </div>
            </div>
          </div>
        </div>
				{{/each}}
				<!-- end of house -->
      </div>
    </div>
