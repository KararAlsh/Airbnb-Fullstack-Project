{{> nav loggedUser=loggedUser}}
    <!-- end top nav -->
    <div class="container mt-4">
      <div class="row">
        <div class="col-3">
          <form>
            <h2 class="border-bottom pb-3">Profile</h2>
            <label class="form-label mb-0"><small>Name</small></label>
            <input type="text" class="form-control mb-3" value="{{loggedUser.name}}" />
            <label class="form-label mb-0"><small>Email</small></label>
            <input type="email" class="form-control mb-3" value="{{loggedUser.email}}"/>
            <label class="form-label mb-0"
              ><small>Profile Picture</small></label
            >
            <div class="">
              <img class="userlogo-profile-pg
              my-2"src={{loggedUser.avatar}}>
            </div>
            <input type="text" class="form-control mb-3" value="{{loggedUser.avatar}}"/>
            <div>
              <button class="btn btn-success btn-sm">
                Save Changes
              </button>
            </div>
          </form>
        </div>
        <div class="col-7 offset-2">
          <h2 class="border-bottom pb-3">My Listings</h2>
          <div>
						<a href="/houses/create"><button class="btn btn-success btn-sm mb-3 mt-1">
              List a house
            </button></a>
            <!-- card 1 -->
						{{#each houses as |house|}}
            <div class="card mb-3" style="max-width: 540px;">
              <div class="row g-0">
                <div class="col-md-4">
                  <img
                    src={{photos.[0]}}
                    class="img-fluid rounded-start"
                    alt="..."
                  />
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h5 class="card-title">{{house.title}}</h5>
                    <small class="text-muted">{{house.location}} â€¢ {{house.rooms}}</small>
                    <p class="card-text">
                      {{house.description}}
                    </p>
                    <a
                      href="/houses/{{house._id}}/edit"
                      class="btn btn-outline-secondary btn-sm"
                    >
                      <small>Edit</small></a
                    >
                    <a href="/houses/{{house._id}}" class="btn btn-outline-secondary btn-sm">
                      <small>View</small></a
                    >
                  </div>
                </div>
              </div>
            </div>
						{{/each}}
            <!-- end of card 1 -->
            <!-- if u dont have any houses listed -->
            <!-- <div class="alert alert-light border border-light" role="alert">
              You don't have any houses listed
            </div> -->
          </div>
        </div>
      </div>
    </div>
